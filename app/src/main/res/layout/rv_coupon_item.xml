<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="310dp"
                android:layout_height="wrap_content">
    <ImageView android:layout_width="310dp" android:layout_height="90dp"
    android:src="@drawable/mypage_freecoupon"
    android:id="@+id/iv_act_coupon"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="113dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="무료 음료 쿠폰"
        style="@style/Bold13"
        android:textColor="@color/white"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="0000.00.00"
        style="@style/Regular13"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:id="@+id/tv_rv_coupon_item_date"/>

    </LinearLayout>

</RelativeLayout>