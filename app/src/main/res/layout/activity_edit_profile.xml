<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.main.EditProfileActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            app:contentInsetStart="0dp">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                        android:paddingLeft="16dp"
                        android:background="@drawable/home_ranking_divider">

            <ImageView android:layout_width="24dp" android:layout_height="24dp"
                       android:layout_marginTop="15dp"
                       android:layout_marginBottom="16dp"
                       android:src="@drawable/common_back_black"
                       android:id="@+id/iv_act_notice_back"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      style="@style/Bold15"
                      android:text="알림"
                      android:layout_centerInParent="true"
            />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_below="@id/toolbar_edit_profile"></RelativeLayout>
</RelativeLayout>