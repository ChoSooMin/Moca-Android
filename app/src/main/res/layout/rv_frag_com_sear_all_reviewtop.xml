<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_frag_com_sear_all_reviewtop"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:background="@drawable/boarder_darkgray">

        <ImageView
            android:id="@+id/iv_rv_frag_com_sear_all_reviewtop"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#eaeaea"/>

        <TextView
            android:id="@+id/tv_rv_frag_com_sear_all_reviewtop"
            android:layout_below="@id/iv_rv_frag_com_sear_all_reviewtop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울리즘"
            android:textColor="#101010"
            android:textSize="11sp"
            android:fontFamily="@font/nanum_b"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ib_rv_com_sear_all_reviewtop_scrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/community_reviewcount"/>

            <TextView
                android:id="@+id/tv_rv_frag_com_sear_all_reviewtop_reviewnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="124"
                android:textColor="#bfbfbf"
                android:textSize="11sp"
                android:fontFamily="@font/nanum_b"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>