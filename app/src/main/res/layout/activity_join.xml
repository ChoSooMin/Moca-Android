<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.loginJoin.JoinActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="50dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/signup_halfcricle"
                app:layout_constraintDimensionRatio="360:146"
                android:scaleType="fitXY"/>
            <View
                android:id="@+id/view_join_blank"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="50dp"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_join_blank">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_join_profile"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:background="@drawable/common_defaultimage"
                    android:scaleType="centerCrop"/>

                <ImageButton
                    android:id="@+id/ib_join_selectProfile"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/mypage_edit_image"
                    app:layout_constraintTop_toTopOf="@id/civ_join_profile"
                    app:layout_constraintEnd_toEndOf="@id/civ_join_profile"
                    android:layout_marginTop="64dp"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="#707070"
            android:textSize="11sp"
            android:fontFamily="@font/nanum_b"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/et_join_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:background="#00000000"
            android:hint="한글, 영어, 숫자로 2~10자"
            android:textColor="#101010"
            android:textSize="13sp"
            android:fontFamily="@font/nanum_b"
            android:layout_marginTop="9dp"
            android:maxLines="1"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:background="#e1b2a3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴대폰 번호"
            android:textColor="#707070"
            android:textSize="11sp"
            android:fontFamily="@font/nanum_b"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/et_join_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:background="#00000000"
            android:hint="- 없이 입력"
            android:textColor="#101010"
            android:textSize="13sp"
            android:fontFamily="@font/nanum_b"
            android:layout_marginTop="9dp"
            android:maxLines="1"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:background="#e1b2a3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textColor="#707070"
            android:textSize="11sp"
            android:fontFamily="@font/nanum_b"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/et_join_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:background="#00000000"
            android:hint="영어, 숫자로 3~10자"
            android:textColor="#101010"
            android:textSize="13sp"
            android:fontFamily="@font/nanum_b"
            android:layout_marginTop="9dp"
            android:maxLines="1"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:background="#e1b2a3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textColor="#707070"
            android:textSize="11sp"
            android:fontFamily="@font/nanum_b"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/et_join_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:background="#00000000"
            android:hint="영어, 숫자로 6~15자"
            android:inputType="textPassword"
            android:textColor="#101010"
            android:textSize="13sp"
            android:fontFamily="@font/nanum_b"
            android:layout_marginTop="9dp"
            android:maxLines="1"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:background="#e1b2a3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
           android:textColor="#707070"
            android:textSize="11sp"
            android:fontFamily="@font/nanum_b"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/et_join_pwCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:background="#00000000"
            android:hint="************"
            android:inputType="textPassword"
            android:textColor="#101010"
            android:textSize="13sp"
            android:fontFamily="@font/nanum_b"
            android:layout_marginTop="9dp"
            android:maxLines="1"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:background="#e1b2a3"/>

        <Button
            android:id="@+id/btn_join"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="23dp"
            android:text="회원가입"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:fontFamily="@font/nanum_b"
            android:background="@drawable/button_pink_radius"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/btn_join_cancel"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="30dp"
            android:text="취소"
            android:textColor="#e1b2a3"
            android:textSize="13sp"
            android:fontFamily="@font/nanum_b"
            android:background="@drawable/button_pink_border"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</ScrollView>