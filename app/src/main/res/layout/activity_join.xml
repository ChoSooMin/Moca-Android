<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".ui.loginJoin.JoinActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:src="@drawable/signup_halfcricle"
            android:scaleType="fitXY"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="96dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_join_profile"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:background="#000000"/>

            <ImageButton
                android:id="@+id/ib_join_selectProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mypage_edit_image"
                app:layout_constraintTop_toTopOf="@id/civ_join_profile"
                app:layout_constraintEnd_toEndOf="@id/civ_join_profile"
                android:layout_marginTop="64dp"/>

        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="#707070"
        android:textSize="11sp"
        android:fontFamily="@font/nanum_b"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/et_join_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:background="#00000000"
        android:hint="져니"
        android:textColor="#101010"
        android:textSize="13sp"
        android:fontFamily="@font/nanum_b"
        android:layout_marginTop="9dp"
        android:maxLines="1"
        android:singleLine="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:background="#e1b2a3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호"
        android:textColor="#707070"
        android:textSize="11sp"
        android:fontFamily="@font/nanum_b"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/et_join_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:background="#00000000"
        android:hint="01012345678"
        android:textColor="#101010"
        android:textSize="13sp"
        android:fontFamily="@font/nanum_b"
        android:layout_marginTop="9dp"
        android:maxLines="1"
        android:singleLine="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:background="#e1b2a3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textColor="#707070"
        android:textSize="11sp"
        android:fontFamily="@font/nanum_b"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/et_join_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:background="#00000000"
        android:hint="moca"
        android:textColor="#101010"
        android:textSize="13sp"
        android:fontFamily="@font/nanum_b"
        android:layout_marginTop="9dp"
        android:maxLines="1"
        android:singleLine="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:background="#e1b2a3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textColor="#707070"
        android:textSize="11sp"
        android:fontFamily="@font/nanum_b"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/et_join_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:background="#00000000"
        android:hint="01012345678"
        android:textColor="#101010"
        android:textSize="13sp"
        android:fontFamily="@font/nanum_b"
        android:layout_marginTop="9dp"
        android:maxLines="1"
        android:singleLine="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:background="#e1b2a3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인"
       android:textColor="#707070"
        android:textSize="11sp"
        android:fontFamily="@font/nanum_b"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/et_join_pwCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:background="#00000000"
        android:hint="01012345678"
        android:textColor="#101010"
        android:textSize="13sp"
        android:fontFamily="@font/nanum_b"
        android:layout_marginTop="9dp"
        android:maxLines="1"
        android:singleLine="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:background="#e1b2a3"/>

    <Button
        android:id="@+id/btn_join"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="23dp"
        android:text="회원가입"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:fontFamily="@font/nanum_b"
        android:background="@drawable/button_pink_radius"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/btn_join_cancel"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="6dp"
        android:text="취소"
        android:textColor="#e1b2a3"
        android:textSize="13sp"
        android:fontFamily="@font/nanum_b"
        android:background="@drawable/button_pink_border"
        style="?android:attr/borderlessButtonStyle"/>

</LinearLayout>