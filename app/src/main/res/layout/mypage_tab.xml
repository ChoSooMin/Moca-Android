<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="289dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_mypage_tab_above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mypage_tab_bg_top"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_launcher_background"/>

            <ImageView
                android:id="@+id/iv_mypage_tab_barcode"
                android:layout_width="43dp"
                android:layout_height="14dp"
                android:layout_marginLeft="103dp"
                android:layout_marginTop="11dp" />

            <RelativeLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="6dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_launcher_background" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"

                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_launcher_background" />
            </RelativeLayout>


        </LinearLayout>

        <TextView
            style="@style/home_category_title"
            android:layout_marginLeft="0dp"
            android:text="정화니" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/nanum_l"
            android:lineSpacingExtra="4dp"
            android:text="상태메시지는 여기에 작성되는데 너무 길면 어떻게 바뀔까용 요렇게!"
            android:textSize="7sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_mypage_tab_above"
        android:background="@drawable/mypage_tab_bg_below"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="84dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="13dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="27dp"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_launcher_background"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/mypage_tab_navi_name"
                        android:text="홈"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="27dp"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_launcher_background"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="카테고리"
                        style="@style/mypage_tab_navi_name"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="27dp"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_launcher_background"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="위치"
                        style="@style/mypage_tab_navi_name"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="27dp"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_launcher_background"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="커뮤니티"
                        style="@style/mypage_tab_navi_name"/>
                </LinearLayout>



            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/light_gray"></RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="vertical">
            <TextView
                style="@style/mypage_tab_menu_title"
                android:text="찜한 카페"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="17dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/mypage_tab_menu_zzim_image"
                    android:src="@drawable/ic_launcher_background"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/mypage_tab_menu_zzim_image"
                    android:src="@drawable/ic_launcher_background"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/mypage_tab_menu_zzim_image"
                    android:src="@drawable/ic_launcher_background"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/mypage_tab_menu_zzim_image"
                    android:src="@drawable/ic_launcher_background"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/mypage_tab_menu_zzim_image"
                    android:src="@drawable/ic_launcher_background"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/light_gray"></RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/mypage_tab_menu_title"
                    android:text="음료 쿠폰"
                    />
                <TextView
                    style="@style/mypage_tab_menu_title"
                    android:layout_marginLeft="186dp"
                    android:text="3"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="9dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mypage_arrow_right"/>
            </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/light_gray"></RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/mypage_tab_menu_title"
                android:text="멤버십"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="9dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="9dp"
                android:src="@drawable/mypage_arrow_down"/>
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>