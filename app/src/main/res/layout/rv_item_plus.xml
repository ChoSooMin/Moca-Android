<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayout_plus_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="277dp"
    android:orientation="vertical">

    <ImageView
            android:id="@+id/iv_plus_contentsImage"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/black"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_plus_profile"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:src="#c1c1c1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/civ_plus_profile"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp">

                <TextView
                        android:id="@+id/tv_plus_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="크리스마스, 여기라면 충분할 거에요!"
                        android:textSize="13sp"
                        android:textColor="#252525"
                        android:fontFamily="@font/nanum_b"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp">

                    <TextView
                            android:id="@+id/tv_plus_editorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="김정환"
                            android:textSize="11sp"
                            android:textColor="#252525"
                            android:fontFamily="@font/nanum_l"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 에디터"
                            android:textSize="11sp"
                            android:textColor="#252525"
                            android:fontFamily="@font/nanum_l"/>

                </LinearLayout>

        </LinearLayout>



    </RelativeLayout>

</LinearLayout>