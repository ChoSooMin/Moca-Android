<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_comment_profileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@color/light_gray"
        app:layout_constraintTop_toTopOf="@id/tv_comment_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/tv_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="18dp"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanum_r"
        tools:text="닉네임"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/dark_gray"
        android:lineSpacingExtra="6sp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/nanum_r"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="댓글은 여기까지 이렇게 쓸 수 있고 길어지면 같은 너비로 쭉 늘어나면 되고"/>
    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/nanum_l"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="20시간 전"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0.3dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_comment_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#bfbfbf"/>
</android.support.constraint.ConstraintLayout>