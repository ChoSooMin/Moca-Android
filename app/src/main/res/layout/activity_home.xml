<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_act_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.HomeActivity">

    <android.support.design.widget.NavigationView
        android:id="@+id/nv_act_home"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/mypage_tab_bg"
        app:headerLayout="@layout/mypage_tab">

    </android.support.design.widget.NavigationView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="307dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/common_search_field"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="58dp"
                        android:background="@null"
                        android:hint="한옥카페 어때요"
                        android:paddingVertical="11dp"
                        android:textSize="13dp" />
                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_act_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical">

                <RelativeLayout style="@style/home_category_layout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="37dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:gravity="center_vertical"
                                android:layout_alignParentBottom="true"
                                android:layout_height="22dp">

                            <TextView
                                style="@style/home_category_title"
                                android:text="Moca Picks" />

                            <TextView
                                android:id="@+id/home_picks_tv" style="@style/home_category_look_entire" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_act_home_picks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false">
                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout style="@style/home_category_layout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="37dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:gravity="center_vertical"
                                android:layout_alignParentBottom="true"
                                android:layout_height="22dp">

                                <TextView
                                    style="@style/home_category_title"
                                    android:text="Concept" />

                                <TextView
                                    android:id="@+id/home_concept_tv"
                                    style="@style/home_category_look_entire" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_act_home_concept"
                            android:layout_width="match_parent"
                            android:layout_height="99dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="9dp"
                            android:nestedScrollingEnabled="false">

                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout style="@style/home_category_layout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="37dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:gravity="center_vertical"
                                android:layout_alignParentBottom="true"
                                android:layout_height="22dp">

                                <TextView
                                    style="@style/home_category_title"
                                    android:text="Ranking" />

                                <TextView
                                    android:id="@+id/home_ranking_tv"
                                    style="@style/home_category_look_entire" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_act_home_ranking"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="9dp">

                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout style="@style/home_category_layout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="37dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:gravity="center_vertical"
                                android:layout_alignParentBottom="true"
                                android:layout_height="22dp">

                                <TextView
                                    style="@style/home_category_title"
                                    android:text="Moca Plus" />

                                <TextView
                                    android:id="@+id/home_plus_tv"
                                    style="@style/home_category_look_entire" />
                            </RelativeLayout>
                        </RelativeLayout>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_act_home_plus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="18dp">

                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>