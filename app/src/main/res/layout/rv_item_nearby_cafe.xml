<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/tools"
            android:id="@+id/item_cv_nearby_cafe"
            android:background="@drawable/boarder_darkgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            card_view:cardElevation="0dp">
    <RelativeLayout
            android:id="@+id/rl_dialog_location_main"
             android:layout_centerInParent="true"
            android:layout_width="117dp"
            android:layout_height="127dp">
        <ImageView
                android:background="@drawable/round_square_white"
                android:scaleType="centerCrop"
                android:id="@+id/circle_nearby_cafe"
                android:layout_width="match_parent"
                android:layout_height="84dp"
        />
        <RelativeLayout
                android:layout_below="@+id/circle_nearby_cafe"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tv_nearby_cafe_name"
                    style="@style/Bold13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="카페이름"
                    android:singleLine="true"
            />
            <ImageView
                    android:layout_marginTop="5dp"
                    android:id="@+id/img_common_location"
                    android:layout_below="@+id/tv_nearby_cafe_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location_ic_location"/>
            <TextView
                    android:id="@+id/txt_nearby_how_close"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/img_common_location"
                    android:layout_below="@+id/tv_nearby_cafe_name"
                    style="@style/Regular11"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가까운 정도"
                    android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>