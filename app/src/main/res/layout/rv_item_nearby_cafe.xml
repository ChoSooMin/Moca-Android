<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/rl_dialog_location_main"
        xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="118dp"
                android:layout_marginHorizontal="10dp"
                android:background="#ffffff"
                android:layout_height="128dp">

    <RelativeLayout
            android:layout_below="@+id/circle_nearby_cafe"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_nearby_cafe_name"
                style="@style/Bold13"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:text="카페이름"
                android:singleLine="true"
        />
        <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/img_common_location"
                android:layout_below="@+id/tv_nearby_cafe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_location"/>
        <TextView
                android:id="@+id/txt_nearby_how_close"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/img_common_location"
                android:layout_below="@+id/tv_nearby_cafe_name"
                style="@style/Bold11"
                android:singleLine="true"
                android:textColor="@color/dark_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가까운 정도"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <ImageView
            android:id="@+id/circle_nearby_cafe"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:src="@color/colorPrimary"
    />
</RelativeLayout>