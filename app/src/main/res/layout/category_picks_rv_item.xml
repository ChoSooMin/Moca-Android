<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <android.support.constraint.ConstraintLayout
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_cat_pic_rv_item_image"
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:elevation="10dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_cat_pic_rv_item_cafe_name"
                android:background="#fff"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_cat_pic_rv_item_cafe_name"
                style="@style/Bold13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_cat_pic_rv_item_image"
                android:text="cafe name" />

            <TextView
                android:id="@+id/tv_cat_pic_rv_item_cafe_location"
                style="@style/Light11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_cat_pic_rv_item_cafe_name"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="cafe Location" />
        </android.support.constraint.ConstraintLayout>

</RelativeLayout>