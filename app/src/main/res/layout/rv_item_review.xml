<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/review_item_profile_circle"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:src="@color/colorPrimary"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/review_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanum_b"
        tools:text="이름"
        />
    <RatingBar
        android:id="@+id/review_item_rating_rating"
        style="@style/SmallRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:rating="3"
        android:progressDrawable="@drawable/small_rating_bar_layer"
        android:layout_marginStart="63dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/review_item_heart_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="46dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/common_heart_blank"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/review_item_comment_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/common_comment"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/review_item_pic_iv"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:layout_marginStart="41dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_item_rating_rating"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:background="@drawable/round_square_blank"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintEnd_toEndOf="@id/review_item_pic_iv"
        app:layout_constraintBottom_toBottomOf="@id/review_item_pic_iv"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#ffffff"
        android:fontFamily="@font/nanum_r"
        android:text="1/10"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintEnd_toEndOf="@id/review_item_pic_iv"
        app:layout_constraintBottom_toBottomOf="@id/review_item_pic_iv"/>
    <TextView
        android:id="@+id/review_item_cafename_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:fontFamily="@font/nanum_b"
        android:textColor="@color/black"
        android:layout_marginTop="9.6dp"
        android:layout_marginStart="42dp"
        app:layout_constraintTop_toBottomOf="@+id/review_item_pic_iv"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="C27"
        />
    <TextView
        android:id="@+id/review_item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:fontFamily="@font/nanum_l"
        android:textColor="@color/dark_gray"
        android:layout_marginTop="11.6dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/review_item_pic_iv"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="20시간 전"
        />
    <ImageView
        android:layout_width="12dp"
        android:layout_height="13dp"
        android:layout_marginTop="27.6dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_item_pic_iv"
        android:src="@drawable/ic_community_location"/>
    <TextView
        android:id="@+id/review_item_cafelocation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/nanum_l"
        android:layout_marginStart="59dp"
        android:layout_marginTop="28.6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_item_pic_iv"
        tools:text="서울 강남구"
        />
    <ImageView
        android:id="@+id/review_item_heart2_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/common_heart_blank"
        android:layout_marginStart="36dp"
        android:layout_marginTop="41dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_item_pic_iv"
        />
    <TextView
        android:id="@+id/review_item_heart2Num_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_r"
        android:textSize="9sp"
        android:textColor="@color/black"
        android:layout_marginStart="63dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_item_pic_iv"
        tools:text="200"
        />
    <ImageView
        android:id="@+id/review_item_comment2_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/common_comment"
        android:layout_marginStart="84dp"
        android:layout_marginTop="41dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_item_pic_iv"
        />
    <TextView
        android:id="@+id/review_item_comment2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_r"
        android:textSize="9sp"
        android:textColor="@color/black"
        android:layout_marginStart="111dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_item_pic_iv"
        tools:text="200"
        />
    <TextView
        android:id="@+id/review_item_comment_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:fontFamily="@font/nanum_r"
        android:textColor="@color/black"
        android:lineSpacingExtra="4sp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/review_item_pic_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_item_heart2_iv"
        tools:text="오께~이 간만에 커필 마셨는데 음~ 가격~이… 잘 모르겠쒀요~~그아아아아"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/review_item_more_const"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/review_item_more_iv"
            android:layout_width="16dp"
            android:layout_height="13dp"
            android:src="@drawable/common_more_arrow"/>
        <TextView
            android:id="@+id/review_item_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_r"
            android:textSize="11sp"
            android:textColor="#bfbfbf"
            android:layout_marginStart="0.8dp"
            app:layout_constraintStart_toEndOf="@id/review_item_more_iv"
            android:text="더보기"/>
    </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_item_comment_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#bfbfbf"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/review_item_heart_lt"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="46dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>