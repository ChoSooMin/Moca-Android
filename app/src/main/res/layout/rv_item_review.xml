<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:src="@color/colorPrimary"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanum_b"
        tools:text="이름"
        />
    <RatingBar
        android:id="@+id/review_item_rating_rating"
        style="@style/SmallRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:rating="3"
        android:progressDrawable="@drawable/small_rating_bar_layer"
        android:layout_marginStart="63dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/common_heart_blank"
        android:layout_marginEnd="46dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/common_comment"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/review_item_pic_iv"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/review_item_rating_rating"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/review_item_heart2_iv"
        android:layout_width="13dp"
        android:layout_height="11dp"
        android:background="@drawable/common_heart_white"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@id/review_item_pic_iv"
        app:layout_constraintBottom_toBottomOf="@id/review_item_pic_iv"
        />
    <TextView
        android:id="@+id/review_item_heart2Num_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_b"
        android:textSize="9sp"
        android:textColor="#ffffff"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toEndOf="@id/review_item_heart2_iv"
        app:layout_constraintBottom_toBottomOf="@id/review_item_pic_iv"
        tools:text="200"
        />
    <ImageView
        android:id="@+id/review_item_comment_iv"
        android:layout_width="13dp"
        android:layout_height="11dp"
        android:background="@drawable/common_comment_white"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toEndOf="@id/review_item_heart2Num_iv"
        app:layout_constraintBottom_toBottomOf="@id/review_item_pic_iv"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_b"
        android:textSize="9sp"
        android:textColor="#ffffff"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toEndOf="@id/review_item_comment_iv"
        app:layout_constraintBottom_toBottomOf="@id/review_item_pic_iv"
        tools:text="200"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:fontFamily="@font/nanum_b"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toBottomOf="@+id/review_item_pic_iv"
        app:layout_constraintStart_toStartOf="@id/review_item_pic_iv"
        tools:text="C27"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:fontFamily="@font/nanum_l"
        android:textColor="@color/dark_gray"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/review_item_pic_iv"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="20시간 전"
        />
    <ImageView
        android:layout_width="12dp"
        android:layout_height="13dp"
        android:layout_marginTop="29dp"
        app:layout_constraintStart_toStartOf="@+id/review_item_pic_iv"
        app:layout_constraintTop_toBottomOf="@+id/review_item_pic_iv"
        android:src="@drawable/ic_community_location"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/nanum_l"
        android:layout_marginStart="17dp"
        android:layout_marginTop="28.5dp"
        app:layout_constraintStart_toStartOf="@+id/review_item_pic_iv"
        app:layout_constraintTop_toBottomOf="@+id/review_item_pic_iv"
        tools:text="서울 강남구"
        />
    <TextView
        android:id="@+id/review_item_comment_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:fontFamily="@font/nanum_r"
        android:textColor="@color/black"
        android:lineSpacingExtra="4sp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="49dp"
        app:layout_constraintStart_toStartOf="@+id/review_item_pic_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_item_pic_iv"
        tools:text="오께~이 간만에 커필 마셨는데 음~ 가격~이… 잘 모르겠쒀요~~그아아아아"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="16.5dp"
        android:layout_marginStart="50.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_item_comment_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#bfbfbf"/>
</android.support.constraint.ConstraintLayout>