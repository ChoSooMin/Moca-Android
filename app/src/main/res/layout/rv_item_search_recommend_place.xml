<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rv_item_search_recommend_place_relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="236dp"
    android:layout_height="173dp"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="226dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_search_recommend_place_image"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:background="@drawable/rounded_imageview_border_5"
            android:src="#000000"/>

        <TextView
            android:id="@+id/tv_search_recommend_place_tag"
            android:layout_below="@id/iv_search_recommend_place_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="#연남동"
            android:textColor="#101010"
            android:textSize="11sp"
            android:fontFamily="@font/nanum_b"
            android:background="@drawable/border_darkgray_radius_3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"/>

    </RelativeLayout>

</RelativeLayout>