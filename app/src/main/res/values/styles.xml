<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Light11">
        <item name="android:fontFamily">@font/nanum_l</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Regular11">
        <item name="android:fontFamily">@font/nanum_r</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Bold11">
        <item name="android:fontFamily">@font/nanum_b</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Light13">
        <item name="android:fontFamily">@font/nanum_l</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Regular13">
        <item name="android:fontFamily">@font/nanum_r</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Bold13">
        <item name="android:fontFamily">@font/nanum_b</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Light15">
        <item name="android:fontFamily">@font/nanum_l</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Regular15">
        <item name="android:fontFamily">@font/nanum_r</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Bold15">
        <item name="android:fontFamily">@font/nanum_b</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Extrabold25">
        <item name="android:fontFamily">@font/nanum_b</item>
        <item name="android:textSize">25sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="home_category_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="home_category_title">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_marginTop">15dp</item>
        <item name = "android:layout_marginLeft">20dp</item>
        <item name="android:fontFamily">@font/nanum_b</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">1.5sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mypage_tab_navi_name" parent="Bold15">
        <item name="android:textSize">7sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/point_pink</item>
    </style>


    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="SmallRatingBar" parent="@android:style/Widget.Holo.RatingBar.Small">
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>

</resources>
